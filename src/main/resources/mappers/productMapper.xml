<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.givemetreat.product.mapper.ProductMapper">
 	<select id="selectProduct" resultType="com.givemetreat.product.domain.Product">
 		SELECT
			`id`
			, `name`
			, `category`
			, `price`
			, `agePetProper`
			, `imgProfile`
			, `imgThumbnail`
		FROM
			`product`
		<where>
			<if test="id != null">
				`id` = #{id}
			</if>
			<if test="name != null">
				`name` like LOWER(concat('%',#{name},'%'))
			</if>	
			<if test="category != null">
				`category` = #{category}
			</if>	
			<if test="price != null">
				`price` = #{price}
			</if>	
			<if test="agePetProper != null">
				`agePetProper` = #{agePetProper}
			</if>
		</where>	
 	</select>
 </mapper>